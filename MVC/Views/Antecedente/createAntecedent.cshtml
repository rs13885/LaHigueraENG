                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="RiesgoNut">Nutritional risk: </label>
                <select class="form-control" name="RiesgoNut">
                    <option value=0>Choose an option</option>
                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="RiesgoSoc">Social risk: </label>
                <select class="form-control" name="RiesgoSoc">
                    <option value=0>Choose an option</option>
                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="Personales">Personal history: </label>
                <select class="form-control" name="Personales">
                    <option value=0>Choose an option</option>
                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="Familiares">Family history: </label>
                <select class="form-control" name="Familiares">
                    <option value=0>Choose an option</option>
                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
        </div>
        <br />
        <br />        
        <div class="row">
            <div class="col">
                <label class="form-label" for="AntPerinatales">Perinatal history: </label>
                <select class="form-control" name="AntPerinatales">
                    <option value=0>Choose an option</option>
                    <option value=1>Yes</option>
                    <option value=0>No</option>
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="Vacunacion">Vaccination: </label>
                <select class="form-control" name="Vacunacion">
                    <option value=0>Choose an option</option>
